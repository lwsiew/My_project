<!DOCTYPE html>
<html>
  <head>
    <title>MyProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if flash[:notice] %>
  <div><%= flash[:notice] %></div>
  <% end %>

  <% if current_user %>
  Logged in as <%= current_user.email %>
  <%= button_to "Home", root_path, method: :get %>
  <%= button_to "Places", places_path, method: :get %>
  <%= button_to "Profile page", user_path(current_user.id), method: :get %>
  <%= button_to "Sign out", sign_out_path, method: :delete %>
  <% else %>  
  <%= button_to "Sign in", sign_in_path, method: :get %>
  <%= button_to "Sign up", sign_up_path, method: :get %>
  <% end %>

    <%= yield %>
  </body>
</html>
