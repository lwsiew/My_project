<%= button_to "Bookmark", bookmark_create_path(place_id: @place.id, user_id: current_user.id) %></br>
<%= image_tag @place.image_url.to_s %></br>
<% @show_review.each do |review| %>
	<%= review.description %></br>
<% end %>

<%= form_for @review, url: review_create_path(place_id: @place.id, user_id: current_user.id) do |review| %>

	Post your review</br>
	<%= review.text_field :description, :size => 150 %>

	<%= review.submit "Post review" %>
<% end %>