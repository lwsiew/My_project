<%= form_for @place, :html => {:multipart => true} do |f| %>
	<%= f.label :name %><br/>
	<%= f.text_field :name %><br/>

	<%= f.label :address %><br/>
	<%= f.text_field :address %><br/>	

	<%= f.label :description %><br/>
	<%= f.text_field :description, :size => 150 %><br/>

	<%= f.file_field :image %></br>

	<%= f.submit %>
<% end %> 
